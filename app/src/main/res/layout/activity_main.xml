<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="elka.pw.edu.pl.eititeraz.MainActivity">

    <TextView
        android:id="@+id/dumb_message_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message from another activity: "
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_full_list_message"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_full_list_text_button"
        android:layout_marginTop="20dp"
        android:onClick="onSeeFullListClick"
        />

</LinearLayout>
